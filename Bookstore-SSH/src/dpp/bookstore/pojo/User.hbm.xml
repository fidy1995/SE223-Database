<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="dpp.bookstore.pojo">
	<class name = "dpp.bookstore.pojo.User" table = "users">
		<id name = "username" column = "uname" type = "java.lang.String">
			<generator class = "assigned" />
		</id>
		<property name = "password" column = "upass" type = "java.lang.String" />
	</class>
</hibernate-mapping>